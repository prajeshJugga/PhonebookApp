@model Phonebook.Models.PhoneBook

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Phone Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                @* @Html.TextBoxFor(m => m.Name, new { @class = "form-control" }) *@
                <span asp-validation-for="Name" class="text-danger"></span>

                <label class="control-label">Phone Book Contacts</label>

                <div style="text-align:center;">  
                    <table cellpadding="3" cellspacing="0" style="text-align:left; width:100%; border: 1px solid transparent">  
                        <tr style="font-weight: bold; border: 1px solid transparent">  
                            <td>Name</td>  
                            <td>Number</td>  
                        </tr>

                        @for (var i = 0; i < Model.Entries.Count; i++)
                        {
                            <tr style="font-weight: bold;">  
                                <td style="width:20%; border: 1px solid transparent">@Html.TextBoxFor(m => m.Entries[i].Name, new { @class = "form-control" })</td>  
                                <td style="width:20%; border: 1px solid transparent">@Html.TextBoxFor(m => m.Entries[i].Number, new { @class = "form-control" })</td>  
                            </tr>  
                        }
@*                       <tr style="border: 1px solid transparent">  
                           <td colspan="2">  
                                <input type="submit" value="Add New Entry" title="Add New Entry" class="btn btn-primary" />  
                            </td>  
                       </tr>  *@
                    </table>  
                </div>  

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
